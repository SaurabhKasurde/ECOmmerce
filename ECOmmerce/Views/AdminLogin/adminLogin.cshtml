@{
    Layout = null;
}
@model ModelClasses.Login_Classes.Admin_Login

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header text-center">
                        <h3>Login</h3>
                    </div>
                    <div class="card-body">
                        <form asp-controller="AdminLogin" asp-action="adminLogin" method="post">
                            <div class="mb-3">
                                <label for="AdminEmail" class="form-label">Email</label>
                                <input type="email" asp-for="AdminEmail" class="form-control" placeholder="Enter your email" />
                                <span asp-validation-for="AdminEmail" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label for="AdminPassword" class="form-label">Password</label>
                                <input type="password" asp-for="AdminPassword" class="form-control" placeholder="Enter your password" />
                                <span asp-validation-for="AdminPassword" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Login</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
